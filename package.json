{
  "name": "emepetre-player",
  "version": "1.0.0",
  "private": true,
  "description": "EmepetrePlayer - Reproductor de mÃºsica MP3 PWA corporativo",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev:web",
    "dev:web": "npm -w apps/web run dev",
    "dev:api": "npm -w apps/api run start:dev",
    "dev:all": "concurrently --names web,api -c blue,green \"npm run dev:web\" \"npm run dev:api\"",
    "build": "npm run build:shared && npm run build:web && npm run build:api",
    "build:shared": "npm -w packages/shared run build",
    "build:web": "npm -w apps/web run build",
    "build:api": "npm -w apps/api run build",
    "test": "npm run test:web && npm run test:api",
    "test:web": "npm -w apps/web run test",
    "test:api": "npm -w apps/api run test",
    "test:e2e": "npm -w apps/web run test:e2e",
    "lint": "npm run lint:web && npm run lint:api",
    "lint:web": "npm -w apps/web run lint",
    "lint:api": "npm -w apps/api run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,css,md}\"",
    "validate": "python scripts/validate_project.py",
    "clean": "rimraf apps/web/dist apps/api/dist packages/shared/dist node_modules/.cache"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
